# according to R-exts.pdf:
# * the Makevars file is used to 'make' the library
# * the Makefile is only used for installation

# (ugly, FIXME)
DCC32 = "c:\programme\codegear\rad studio\5.0\bin/dcc32"
FLEXCEL = "V:\treetronRepos\lib_delphi_repos\FlexcelVCL\Source"
HASHLIB = "V:\treetronRepos\lib_delphi_repos\MiscLib\HashLib\src"
DELPHILIB = "c:\programme\codegear\rad studio\5.0\lib"

OBJECTS =
PKG ?= xlsReadWrite

# we compile every time instead on relying on object files
# (it's fast and the cran/full versions don't get mixed up)
all:
	@echo "  ### all (Makevars)"
	@$(DCC32) -Q -M -U../RPascal/src -U$(FLEXCEL) -U$(HASHLIB) -O$(DELPHILIB) $(PKG).dpr
clean:
	@echo "  ### clean (Makevars)"
	@rm -f *.dcu $(PKG).$(DLL) ../RPascal/src/*.$(DCU)
